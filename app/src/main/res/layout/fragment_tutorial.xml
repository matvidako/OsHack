<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_light"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_tutorial">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            tools:src="@drawable/tutorial_4" />
    </FrameLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingBottom="@dimen/padding_large"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_onboarding_side"
        android:paddingRight="@dimen/padding_onboarding_side"
        android:textAppearance="@style/TextAppearanceOnboarding"
        tools:text="DAJDAJWC WACJ DWJACO JDCW da dawdaw daw da dawd wa wda dwa" />
</LinearLayout>
