<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">@dimen/padding_standard</item>
        <item name="android:layout_marginRight">@dimen/padding_standard</item>
        <item name="android:layout_marginTop">@dimen/padding_standard</item>
        <item name="android:layout_marginBottom">@dimen/padding_standard</item>
    </style>

    <style name="TextAppearanceOnboarding" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item><!-- text size in menu-->
        <item name="android:textColor">#666666</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:listPreferredItemHeightSmall">60dp</item><!-- item size in menu-->
    </style>

</resources>
